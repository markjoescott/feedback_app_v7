<div class="page-header">
  <h1>Edit Respondent #<%= @respondent.id %></h1>
</div>

<% if @respondent.errors.any? %>
  <% @respondent.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_respondent/<%= @respondent.id %>" class="form-horizontal">
  <!-- Label and input for questionnaire_id -->
  <div class="form-group">
    <label for="questionnaire_id" class="col-sm-2 control-label">
      Questionnaire
    </label>
    <div class="col-sm-10">
      <input type="text" id="questionnaire_id" name="questionnaire_id" placeholder="Questionnaire" class="form-control" value="<%= @respondent.questionnaire_id %>">
    </div>
  </div>

  <!-- Label and input for respondent_email -->
  <div class="form-group">
    <label for="respondent_email" class="col-sm-2 control-label">
      Respondent email
    </label>
    <div class="col-sm-10">
      <input type="text" id="respondent_email" name="respondent_email" placeholder="Respondent email" class="form-control" value="<%= @respondent.respondent_email %>">
    </div>
  </div>

  <!-- Label and input for answer_1 -->
  <div class="form-group">
    <label for="answer_1" class="col-sm-2 control-label">
      Answer 1
    </label>
    <div class="col-sm-10">
      <input type="text" id="answer_1" name="answer_1" placeholder="Answer 1" class="form-control" value="<%= @respondent.answer_1 %>">
    </div>
  </div>

  <!-- Label and input for answer_2 -->
  <div class="form-group">
    <label for="answer_2" class="col-sm-2 control-label">
      Answer 2
    </label>
    <div class="col-sm-10">
      <input type="text" id="answer_2" name="answer_2" placeholder="Answer 2" class="form-control" value="<%= @respondent.answer_2 %>">
    </div>
  </div>

  <!-- Label and input for answer_3 -->
  <div class="form-group">
    <label for="answer_3" class="col-sm-2 control-label">
      Answer 3
    </label>
    <div class="col-sm-10">
      <input type="text" id="answer_3" name="answer_3" placeholder="Answer 3" class="form-control" value="<%= @respondent.answer_3 %>">
    </div>
  </div>

  <!-- Label and input for answer_4 -->
  <div class="form-group">
    <label for="answer_4" class="col-sm-2 control-label">
      Answer 4
    </label>
    <div class="col-sm-10">
      <input type="text" id="answer_4" name="answer_4" placeholder="Answer 4" class="form-control" value="<%= @respondent.answer_4 %>">
    </div>
  </div>

  <!-- Label and input for answer_5 -->
  <div class="form-group">
    <label for="answer_5" class="col-sm-2 control-label">
      Answer 5
    </label>
    <div class="col-sm-10">
      <input type="text" id="answer_5" name="answer_5" placeholder="Answer 5" class="form-control" value="<%= @respondent.answer_5 %>">
    </div>
  </div>

  <!-- Label and input for course_id -->
  <div class="form-group">
    <label for="course_id" class="col-sm-2 control-label">
      Course
    </label>
    <div class="col-sm-10">
      <input type="text" id="course_id" name="course_id" placeholder="Course" class="form-control" value="<%= @respondent.course_id %>">
    </div>
  </div>

  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id" class="col-sm-2 control-label">
      User
    </label>
    <div class="col-sm-10">
      <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @respondent.user_id %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Respondent" class="btn btn-primary">
    </div>
  </div>
</form>
